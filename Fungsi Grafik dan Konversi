# Bukan fungsi
a = 2
b = 3
c = a+b
print ("Hasil dari ",a,"+",b,"adalah",c)


# Bukan fungsi lainnya
a = 15
b = 20
c=a+b
print ("Hasil dari ",a,"+",b,"adalah",c)


# Dengan menggunakan fungsi
def tambah(a,b):
  return a+b

# Panggil fungsin
tambah_pertama=tambah(2,3)
print (tambah_pertama)

tambah_kedua=tambah(15,20)
print (tambah_kedua)



# Fungsi f(x)= x+7
# x=0 sampai 100
def f(x):
  return x+7

for x in range(0,101):
  print (f(x))


# Fungsi g(x)=x^2+2x+6
# x= -10 sampai 50
def g(x):
  return (x**2)+(2*x)+6

for x in range(-10,51):
  print (g(x))


# Array atau list tanpa numpy
# ini adalah nilai dari domain atau x
data = [1,2,3]
print (data)

# inisiasi variabel baru yang bernama hasil
# dimana hasil ini adalah fungsi f(x) dari f(x)=x^2
hasil=[]
for i in data:
  hasil.append(i**2)
print (hasil)


# Menggunakan library numpy untuk mendapatkan hasil fungsi
# install numpy
