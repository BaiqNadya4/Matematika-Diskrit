# Memasukkan library
import numpy

#Jalankan numpy untuk memenggil fungsi x^2
data = numpy.array([1,2,3])
print (data)
hasil = data**2
print (hasil)


# Menggunakan library dengan alias (as)
# Menggunakan library numpy untuk mendapatkan hasil fungsi
# install numpy
# !pip install numpy sudah diintstall jadi saya off kan atau command

# Memasukkan library
import numpy as np

#Jalankan numpy untuk memenggil fungsi x^2
data = np.array([1,2,3])
print (data)
hasil = data**2
print (hasil)


# Install library --> Skip jika sudah melakukan instalasi
# !pip install numpy
# !pip install matplotlib

# Masukkan library numpy dan matplotlib
import numpy as np
import matplotlib.pyplot as plt

# Definisikan fungsi
# Fungsi g(x)=x^2+2x+6
def g(x):
  return (x**2)+(2*x)+6


# Membuat data dengan menggunakan numpy
# Membuat data dari -50 sampai dengan 100
x = np.linspace(-50,1,100)
# Ini maksudnya adalah linspace (dimulai dari titik berapa, jarak (step) berapa, akhirnya berapa)
y = g(x)

# Membuat grafik fungsi
plt.plot(x,y, label='g(x)=x^2+2x+6', color='red')
plt.title('Grafik Fungsi g(x)')
plt.xlabel('x')
plt.ylabel('y')
plt.show()


desimal = 125
print (desimal)

# Konversi ke Hexadesimal
hexadesimal = hex(desimal)
print (hexadesimal)

# Konversi ke biner
biner = bin(desimal)
print (biner)

# Konversi ke oktal
oktal = oct(desimal)
print (oktal)
